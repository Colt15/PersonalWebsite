@model PersonalWebsite.Models.BlogPost


@{
    ViewBag.Title = "Details";
}
<h2>Details</h2>
<div>
    <h4>BlogPost</h4>
    <hr />
    <div style="font-size:larger;">
        @Html.DisplayFor(model => model.Title)
    </div>
    <div style="">
        @Html.DisplayFor(model => model.Body)
    </div>
    <hr />
</div>
<div>
    @foreach (var item in Model.Comments)
    {
        <div class="row">
            <div class="col-md-6">
            </div>
            <div class="col-md-6 col-md-offset-1">
                @Html.DisplayFor(modelItem => item.Created.LocalDateTime)
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
            </div>
            <div class="col-md-6 col-md-offset-1">
                @Html.DisplayFor(modelItem => item.Body)
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
            </div>
            <div class="col-md-6 col-md-offset-1">
                @Html.DisplayFor(modelItem => item.Author.DisplayName)
            </div>
        </div>
        <hr />
        <p></p>
    }
</div>
<p>
    @*@Html.ActionLink("New Comment", "Create", new { id = Model.Id }) |*@
    @*@Html.ActionLink("new Comment", "Create", "Comments", new { slug = Model.Slug })*@
